#!/bin/bash

NUM_GPUS=8
MODEL=deepseek-ai/DeepSeek-R1-Distill-Qwen-1.5B
MODEL_ARGS="model_name=$MODEL,dtype=bfloat16,data_parallel_size=$NUM_GPUS,max_model_length=32768,gpu_memory_utilization=0.8,generation_parameters={max_new_tokens:200,temperature:0.6,top_p:0.95}"
TASK=V-LOL-Benchmark
OUTPUT_DIR=data/evals/$MODEL
export RAY_TMPDIR=/work/ray_tmp

lighteval vllm $MODEL_ARGS "custom|$TASK|0|0" \
    --custom-tasks /work/open-r1/custom_eval/custom_lighteval_tasks.py \
    --use-chat-template \
    --output-dir $OUTPUT_DIR